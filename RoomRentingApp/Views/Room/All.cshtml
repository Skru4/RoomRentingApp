@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<AllRoomsViewModel>

@{
	ViewBag.Ttile = "All rooms";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="text-center row">
@foreach (var room in Model)
{
	<div class="card col-4" style="width: 20rem;">
		<img class="card-img-top" style="width: 18rem;"
		     src="@room.ImageUrl" alt="Room image">
		<div class="card-body">

			<h5 class="card-title mt-1">@room.Description</h5>
			<p class="mb-0">Address: @room.Address</p>
			<p class="mb-0">Price: @room.PricePerWeek</p>
			<p class="mb-0">Rating: @room.Ratings.RatingDigit</p>
			<p>Size: @room.Categories.RoomSize</p>
			<p>L.s.: @room.Categories.LandlordStatus</p>
			<p>Town: @room.Town</p>
		</div>
		<form class="input-group-sm" asp-route-roomId="@room.Id" asp-controller="Room" asp-action="AddToCollection" method="post">
			<input type="submit" value="Mark as Watched" class="fs-6 btn btn-success mb-3 p-2" />
		</form>
		
	</div>
}
</div>