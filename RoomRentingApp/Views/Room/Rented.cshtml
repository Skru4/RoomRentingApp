@model AllRoomsViewModel

@{
	ViewBag.Title = "My Rented Room";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (Model.IsRented)
{
	<div class="text-center row">
		<input type="hidden" asp-for="@Model.Id"/>
			<div class="card col-4" style="width: 20rem;">
				<img class="card-img-top" style="width: 18rem;"
			 src="@Model.ImageUrl" alt="Room image">
				<div class="card-body">

				<h5 class="card-title mt-1">@Model.Description</h5>
				<p class="mb-0">Address: @Model.Address</p>
				<b>@String.Format("{0:f2}", @Model.PricePerWeek) EUR</b>

				<p>Size: @Model.Categories.RoomSize</p>
				<p>L.s.: @Model.Categories.LandlordStatus</p>
				<p>Town: @Model.Town</p>
				</div>
		@*	<form class="input-group-sm" asp-route-roomId="@Model.Id" asp-controller="Room" asp-action="Info" method="post">
					<input type="submit" value="Inspect Room" class="fs-6 btn btn-success mb-3 p-2"/>
				</form>*@

			</div>
	</div>
}
else
{
	<h3 class="text-center">You have not rented a room yet</h3>
}
	