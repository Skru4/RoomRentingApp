@using Microsoft.AspNetCore.Identity
@using RoomRentingApp.Infrastructure.Models
@inject UserManager<ApplicationUser> UserManager
@{
	this.ViewData["Title"] = "Main Page";
}
<div class="w-75 mx-auto">
  @if (!this.User.Identity!.IsAuthenticated)
{
	<h1 class="text-center">Room Renting Application</h1>
	<h2 class="text-center">Finding rooms or giving ones have never been easier.</h2>
	<hr class="bg-dark" />
	<h3 class="mt-4">
		<a class="text-secondary" href="/User/Login">Login</a> if you are already a part of our community
	</h3>
	<h3 class="mt-4">
		<a class="text-secondary" href="/User/Register">Register</a> to become part of us!
	</h3>
}
  else
  {
	  <h1 class="text-center">Welcome, <b>@this.ViewBag.PersonName!</b></h1>
	  <hr class="bg-secondary" />
	  <h3 class="mt-4 text-secondary text-center">We over at <b style="color:darkslateblue;">Room Renting App</b> wish you a very safe and happy journey with us!</h3>
	  <h5 class="text-muted text-center">Explore our cities</h5>
	  <h5 class="text-muted text-center">Discover cozy homes, stunning flats to great rooms across the globe.</h5>

	  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-indicators">
		<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
		<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
		<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
	</div>
	<div class="carousel-inner" >
		<div class="carousel-item active" >
			<img src="https://spa-homepage.uniplaces.com/_next/image?url=https://images.prismic.io/spa-homepage/bc91d65a-a238-4c11-b8c4-3147e2604f13_offer_pt_porto_252585_5.jpg&w=1920&q=70" class="d-block w-100"
					 alt="..." style="height:700px; margin-bottom:5px">
			<div class="carousel-caption d-none d-md-block">
				<h2>Rent a room in unique places</h2>
						<p><b>Browse by profile type, choose your city.</b></p>
			</div>
		</div>
		<div class="carousel-item">
			<img src="https://img.freepik.com/free-photo/living-room-interior-wall-mockup-warm-tones-with-pink-armchair-minimal-design-3d-rendering_41470-4171.jpg?w=996&t=st=1670328188~exp=1670328788~hmac=48d01a71d991e1d778c4a0710bcbc85aa8d0ddf978ee716815db0d042846c2aa" class="d-block w-100"
					 alt="..." style="height:700px; margin-bottom:5px">
			<div class="carousel-caption d-none d-md-block">
				<h2>Live where you want</h2>
						<p> <b>Become a Landlord and earn money.</b></p>
			</div>
		</div>
		<div class="carousel-item">
					<img src="https://rnb.scene7.com/is/image/roomandboard/HH_Liv_S1021_1022?wid=1200" class="d-block w-100" alt="..." style="height:700px; margin-bottom:5px">
			<div class="carousel-caption d-none d-md-block">
					<h2>Match who you are</h2>
						<p><b>Discover cozy homes across the globe.</b></p>
			</div>
		</div>
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>

  }

</div>

