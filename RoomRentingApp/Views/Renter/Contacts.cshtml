@model IEnumerable<AllLandlordsViewModel>

@{
	ViewBag.Title = "These are all the landlords registered in our site";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


	
@foreach (var user in Model)
{
	<div class="row">
	<div class="col-sm-6" style="margin:auto">
		<div class="card" style="margin-bottom:25px">
			<div class="card-body">
				<h5 class="card-title">Name: @user.FirstName @user.LastName</h5>
					<h6 class="card-subtitle text-muted">Landlord</h6>
					<p class="card-text">Phone number: <b>@user.PhoneNumber</b></p>
					<p class="card-text">Number of added rooms: <b>@user.Rooms.Count()</b></p>
					<p class="card-text">@foreach (var room in user.Rooms)
				      {
				       <p>Address: @room.Address / Room status: <b>@(@room.IsRented ? "Rented" : "Free")</b>
				        <a asp-controller="Room" asp-action="Info" asp-route-roomId="@room.Id" class="btn btn-primary">Check</a> </p>
				       
				      }
					
			</div>
		</div>
	</div>
	</div>
}
