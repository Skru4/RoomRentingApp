@using RoomRentingApp.Infrastructure.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RoomCreateModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<input type="hidden" asp-for="@Model.Id" />
			
			<div class="form-group">
				<label asp-for="Address"></label>
				<input asp-for="Address" class="form-control" placeholder="Address...">
				<span asp-validation-for="Address" class="small text-danger"></span>
			</div>
						<div class="form-group">
				<label asp-for="TownId"></label>
				<select asp-for="TownId" class="form-control">
					@foreach (var town in Model.Towns)
					{
						<option value="@town.Id">@town.Name</option>
					}
				</select>
				<span asp-validation-for="TownId" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="4" class="form-control" placeholder="A room with..."></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ImageUrl"></label>
				<input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
				<span asp-validation-for="ImageUrl" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PricePerWeek"></label>
				<input asp-for="PricePerWeek" class="form-control">
				<span asp-validation-for="PricePerWeek" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="RoomCategoryId"></label>
				<select asp-for="RoomCategoryId" class="form-control">
					@foreach (var category in Model.RoomCategories)
					{
						<option value="@category.Id">@category.LandlordStatus</option>
					}
				</select>
				<span asp-validation-for="RoomCategoryId" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="RoomCategoryId"></label>
				<select asp-for="RoomCategoryId" class="form-control">
					@foreach (var category in Model.RoomCategories)
					{
						<option value="@category.Id">@category.RoomSize</option>
					}
				</select>
				<span asp-validation-for="RoomCategoryId" class="small text-danger"></span>
			</div>


			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>